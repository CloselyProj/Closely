@page
@model Closely.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/login.css" />
<div class="section">
		<div class="container">
			<div class="row full-height justify-content-center">
				<div class="col-12 text-center align-self-center py-5">
					<div class="section pb-5 pt-5 pt-sm-2 text-center">
						<h6 class="mb-0 pb-3"><span>Log In </span><span>Sign Up</span></h6>
			          	<input class="checkbox" type="checkbox" id="reg-log" name="reg-log"/>
			          	<label for="reg-log"></label>
						<div class="card-3d-wrap mx-auto">
                            <div class="card-3d-wrapper">
								<div class="card-front">
									<div class="center-wrap">
										<div class="section text-center">
											<h4 class="mb-4 pb-3">Log In</h4>
											<div class="form-group">
												<i class="input-icon uil uil-at"></i>
											</div>	
											<form method="post">
												<div class="form-group mt-2">
													<input type="text" name="loglogin" minlength="4" maxlength="8" class="form-style" placeholder="Login" id="loglogin" autocomplete="off" minlength="8">
													<input type="password" minlength="6" maxlength="16" name="logpass" class="form-style" placeholder="Pass" id="logpass" autocomplete="off">
													<button style="visibility:hidden" type="submit" class="btnlog mt-4" id = "logBtn">Login</button>
												</div>
											</form>
                            				<p class="mb-0 mt-4 text-center"><a href="#0" class="link">Forgot your password?</a></p>
				      					</div>
			      					</div>
			      				</div>
								<div class="card-back">
									<div class="center-wrap">
										<div class="section text-center">
											<h4 class="mb-4 pb-3">Sign Up</h4>
                                            <form method="post">
                                                <div class="form-group">
                                                    <input type="text" name="reglogin" minlength="4" maxlength="8" class="form-style" placeholder="Login" id="reglogin" autocomplete="off">
                                                    <i class="input-icon uil uil-user"></i>
                                                </div>	
                                                <div class="form-group mt-2">
                                                    <input type="password" name="regpass" minlength="6" maxlength="16" class="form-style" placeholder="Password" id="regpass" autocomplete="off">
                                                    <i class="input-icon uil uil-at"></i>
                                                </div>	
                                                <div class="form-group mt-2">
                                                    <input type="password" name="regconfpass" minlength="6" maxlength="16" class="form-style" placeholder="Confirm Password" id="regconfpass" autocomplete="off">
                                                    <i class="input-icon uil uil-at"></i>
                                                </div>	
                                                <div class="form-group mt-2">
                                                    <input type="email" name="regemail" minlength="6" maxlength="25" class="form-style" placeholder="Email" id="regemail" autocomplete="off">
                                                    <i class="input-icon uil uil-lock-alt"></i>
                                                </div>
                                                <button style="visibility:hidden" id="regBtn" type="submit" class="btnlog mt-4">Submit</button>
                                            </form>
				      					</div>
			      					</div>
			      				</div>
			      			</div>
			      		</div>
			      	</div>
		      	</div>
	      	</div>
	    </div>
	</div>
<script src="~/js/login.js"></script>